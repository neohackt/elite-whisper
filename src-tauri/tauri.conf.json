{
  "$schema": "../node_modules/@tauri-apps/cli/schema.json",
  "productName": "Elite Whisper",
  "version": "0.1.0",
  "identifier": "com.tapan.elitewhisper",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Elite Whisper",
        "width": 800,
        "height": 600,
        "resizable": true,
        "transparent": false,
        "label": "main"
      },
      {
        "title": "Widget",
        "width": 300,
        "height": 120,
        "resizable": false,
        "transparent": true,
        "decorations": false,
        "alwaysOnTop": true,
        "visible": false,
        "skipTaskbar": true,
        "label": "widget",
        "url": "/widget"
      }
    ]
  },
  "bundle": {
    "active": true,
    "targets": "all"
  }
}