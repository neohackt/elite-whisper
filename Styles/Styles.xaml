<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- 
    ╔═══════════════════════════════════════════════════════════════════════════╗
    ║  ELITE WHISPER - Premium Design System                                    ║
    ║  Windows 11 Native with macOS-level Polish                                ║
    ╚═══════════════════════════════════════════════════════════════════════════╝
    -->

    <!-- ==================== COLORS ==================== -->
    
    <!-- Background Colors -->
    <SolidColorBrush x:Key="BackgroundPrimary" Color="#FAFAFA"/>
    <SolidColorBrush x:Key="BackgroundSecondary" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="BackgroundTertiary" Color="#F3F3F3"/>
    
    <!-- Sidebar Colors - Slightly translucent, darker -->
    <SolidColorBrush x:Key="SidebarBackground" Color="#F0F0F0"/>
    <SolidColorBrush x:Key="SidebarItemHover" Color="#E5E5E5"/>
    <SolidColorBrush x:Key="SidebarItemSelected" Color="#E0E7FF"/>
    <SolidColorBrush x:Key="SidebarItemSelectedBorder" Color="#6366F1"/>
    
    <!-- Text Colors -->
    <SolidColorBrush x:Key="TextPrimary" Color="#1F2937"/>
    <SolidColorBrush x:Key="TextSecondary" Color="#6B7280"/>
    <SolidColorBrush x:Key="TextTertiary" Color="#9CA3AF"/>
    
    <!-- Accent Colors -->
    <SolidColorBrush x:Key="AccentPrimary" Color="#6366F1"/>
    <SolidColorBrush x:Key="AccentPrimaryHover" Color="#4F46E5"/>
    <SolidColorBrush x:Key="AccentSuccess" Color="#10B981"/>
    <SolidColorBrush x:Key="AccentWarning" Color="#F59E0B"/>
    <SolidColorBrush x:Key="AccentDanger" Color="#EF4444"/>
    
    <!-- Border Colors -->
    <SolidColorBrush x:Key="BorderLight" Color="#E5E7EB"/>
    <SolidColorBrush x:Key="BorderMedium" Color="#D1D5DB"/>
    <SolidColorBrush x:Key="BorderSubtle" Color="#F0F0F0"/>

    <!-- ==================== GRADIENTS ==================== -->
    
    <!-- Card Gradient - Subtle vertical highlight -->
    <LinearGradientBrush x:Key="CardGradient" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="#FFFFFF" Offset="0"/>
        <GradientStop Color="#FCFCFC" Offset="0.5"/>
        <GradientStop Color="#FAFAFA" Offset="1"/>
    </LinearGradientBrush>
    
    <!-- Primary Button Gradient -->
    <LinearGradientBrush x:Key="PrimaryButtonGradient" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="#7C7FF2" Offset="0"/>
        <GradientStop Color="#6366F1" Offset="0.4"/>
        <GradientStop Color="#5558E8" Offset="1"/>
    </LinearGradientBrush>
    
    <LinearGradientBrush x:Key="PrimaryButtonHoverGradient" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="#6366F1" Offset="0"/>
        <GradientStop Color="#5558E8" Offset="0.4"/>
        <GradientStop Color="#4F46E5" Offset="1"/>
    </LinearGradientBrush>
    
    <!-- Secondary Button Gradient -->
    <LinearGradientBrush x:Key="SecondaryButtonGradient" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="#FFFFFF" Offset="0"/>
        <GradientStop Color="#F9FAFB" Offset="0.5"/>
        <GradientStop Color="#F3F4F6" Offset="1"/>
    </LinearGradientBrush>
    
    <LinearGradientBrush x:Key="SecondaryButtonHoverGradient" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="#F9FAFB" Offset="0"/>
        <GradientStop Color="#F3F4F6" Offset="0.5"/>
        <GradientStop Color="#E5E7EB" Offset="1"/>
    </LinearGradientBrush>
    
    <!-- Sidebar Gradient -->
    <LinearGradientBrush x:Key="SidebarGradient" StartPoint="0,0" EndPoint="1,0">
        <GradientStop Color="#F5F5F5" Offset="0"/>
        <GradientStop Color="#EFEFEF" Offset="1"/>
    </LinearGradientBrush>

    <!-- ==================== FONTS ==================== -->
    
    <FontFamily x:Key="FontPrimary">Segoe UI Variable Display, Segoe UI, sans-serif</FontFamily>
    
    <!-- ==================== CORNER RADIUS ==================== -->
    
    <CornerRadius x:Key="RadiusSmall">6</CornerRadius>
    <CornerRadius x:Key="RadiusMedium">10</CornerRadius>
    <CornerRadius x:Key="RadiusLarge">14</CornerRadius>
    <CornerRadius x:Key="RadiusXLarge">18</CornerRadius>

    <!-- ==================== ANIMATION DURATIONS ==================== -->
    
    <Duration x:Key="AnimationFast">0:0:0.12</Duration>
    <Duration x:Key="AnimationNormal">0:0:0.18</Duration>
    <Duration x:Key="AnimationSlow">0:0:0.25</Duration>

    <!-- ==================== CARD STYLE - Premium ==================== -->
    
    <Style x:Key="CardStyle" TargetType="Border">
        <Setter Property="Background" Value="{StaticResource CardGradient}"/>
        <Setter Property="CornerRadius" Value="{StaticResource RadiusLarge}"/>
        <Setter Property="Padding" Value="24"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="BorderBrush" Value="{StaticResource BorderSubtle}"/>
        <Setter Property="Effect">
            <Setter.Value>
                <DropShadowEffect BlurRadius="16" ShadowDepth="4" Opacity="0.06" Color="#1F2937" Direction="270"/>
            </Setter.Value>
        </Setter>
    </Style>
    
    <!-- Card with Hover Effect -->
    <Style x:Key="CardStyleHover" TargetType="Border" BasedOn="{StaticResource CardStyle}">
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Effect">
                    <Setter.Value>
                        <DropShadowEffect BlurRadius="24" ShadowDepth="6" Opacity="0.1" Color="#1F2937" Direction="270"/>
                    </Setter.Value>
                </Setter>
            </Trigger>
        </Style.Triggers>
    </Style>

    <!-- ==================== BUTTON STYLES - Premium ==================== -->
    
    <Style x:Key="PrimaryButton" TargetType="Button">
        <Setter Property="Background" Value="{StaticResource PrimaryButtonGradient}"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="FontFamily" Value="{StaticResource FontPrimary}"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="Padding" Value="20,12"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="BorderBrush" Value="Transparent"/>
        <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
        <Setter Property="SnapsToDevicePixels" Value="True"/>
        <Setter Property="UseLayoutRounding" Value="True"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Grid SnapsToDevicePixels="True" UseLayoutRounding="True">
                        <!-- Shadow Layer -->
                        <Border x:Name="shadowBorder" 
                                CornerRadius="{StaticResource RadiusMedium}"
                                Margin="0,2,0,-2"
                                SnapsToDevicePixels="True">
                            <Border.Effect>
                                <DropShadowEffect BlurRadius="8" ShadowDepth="2" Opacity="0.25" Color="#6366F1" Direction="270"/>
                            </Border.Effect>
                        </Border>
                        
                        <!-- Main Button -->
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}" 
                                CornerRadius="{StaticResource RadiusMedium}"
                                Padding="{TemplateBinding Padding}"
                                BorderThickness="0"
                                BorderBrush="Transparent"
                                SnapsToDevicePixels="True"
                                UseLayoutRounding="True">
                            <ContentPresenter 
                                HorizontalAlignment="Center" 
                                VerticalAlignment="Center"
                                RecognizesAccessKey="True"
                                SnapsToDevicePixels="True"/>
                        </Border>
                    </Grid>
                    
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="border" Property="Background" Value="{StaticResource PrimaryButtonHoverGradient}"/>
                            <Setter TargetName="shadowBorder" Property="Effect">
                                <Setter.Value>
                                    <DropShadowEffect BlurRadius="12" ShadowDepth="4" Opacity="0.35" Color="#6366F1" Direction="270"/>
                                </Setter.Value>
                            </Setter>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter TargetName="border" Property="Margin" Value="0,1,0,-1"/>
                            <Setter TargetName="shadowBorder" Property="Effect">
                                <Setter.Value>
                                    <DropShadowEffect BlurRadius="4" ShadowDepth="1" Opacity="0.2" Color="#6366F1" Direction="270"/>
                                </Setter.Value>
                            </Setter>
                        </Trigger>
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter TargetName="border" Property="Opacity" Value="0.5"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    
    <Style x:Key="SecondaryButton" TargetType="Button">
        <Setter Property="Background" Value="{StaticResource SecondaryButtonGradient}"/>
        <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
        <Setter Property="FontFamily" Value="{StaticResource FontPrimary}"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="FontWeight" Value="Medium"/>
        <Setter Property="Padding" Value="20,12"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="BorderBrush" Value="{StaticResource BorderLight}"/>
        <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
        <Setter Property="SnapsToDevicePixels" Value="True"/>
        <Setter Property="UseLayoutRounding" Value="True"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Grid SnapsToDevicePixels="True" UseLayoutRounding="True">
                        <!-- Shadow Layer -->
                        <Border x:Name="shadowBorder" 
                                CornerRadius="{StaticResource RadiusMedium}"
                                Margin="0,1,0,-1"
                                SnapsToDevicePixels="True">
                            <Border.Effect>
                                <DropShadowEffect BlurRadius="4" ShadowDepth="1" Opacity="0.08" Color="#1F2937" Direction="270"/>
                            </Border.Effect>
                        </Border>
                        
                        <!-- Main Button -->
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="{StaticResource RadiusMedium}"
                                Padding="{TemplateBinding Padding}"
                                SnapsToDevicePixels="True"
                                UseLayoutRounding="True">
                            <ContentPresenter 
                                HorizontalAlignment="Center" 
                                VerticalAlignment="Center"
                                RecognizesAccessKey="True"
                                SnapsToDevicePixels="True"/>
                        </Border>
                    </Grid>
                    
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="border" Property="Background" Value="{StaticResource SecondaryButtonHoverGradient}"/>
                            <Setter TargetName="border" Property="BorderBrush" Value="{StaticResource BorderMedium}"/>
                            <Setter TargetName="shadowBorder" Property="Effect">
                                <Setter.Value>
                                    <DropShadowEffect BlurRadius="8" ShadowDepth="2" Opacity="0.12" Color="#1F2937" Direction="270"/>
                                </Setter.Value>
                            </Setter>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter TargetName="border" Property="Margin" Value="0,1,0,-1"/>
                            <Setter TargetName="shadowBorder" Property="Opacity" Value="0"/>
                        </Trigger>
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter TargetName="border" Property="Opacity" Value="0.5"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- ==================== NAV BUTTON STYLE - Premium ==================== -->
    
    <Style x:Key="NavButton" TargetType="RadioButton">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Foreground" Value="{StaticResource TextSecondary}"/>
        <Setter Property="FontFamily" Value="{StaticResource FontPrimary}"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="Padding" Value="16,12"/>
        <Setter Property="Margin" Value="8,2"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="RadioButton">
                    <Border x:Name="border" 
                            Background="{TemplateBinding Background}" 
                            CornerRadius="{StaticResource RadiusMedium}"
                            Padding="{TemplateBinding Padding}"
                            RenderTransformOrigin="0.5,0.5">
                        <Border.RenderTransform>
                            <ScaleTransform x:Name="scaleTransform" ScaleX="1" ScaleY="1"/>
                        </Border.RenderTransform>
                        <Border.BorderBrush>
                            <SolidColorBrush x:Name="leftBorder" Color="Transparent"/>
                        </Border.BorderBrush>
                        <Border.BorderThickness>
                            <Thickness>3,0,0,0</Thickness>
                        </Border.BorderThickness>
                        <StackPanel Orientation="Horizontal">
                            <ContentPresenter/>
                        </StackPanel>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="border" Property="Background" Value="{StaticResource SidebarItemHover}"/>
                        </Trigger>
                        <Trigger Property="IsChecked" Value="True">
                            <Setter TargetName="border" Property="Background" Value="{StaticResource SidebarItemSelected}"/>
                            <Setter TargetName="border" Property="BorderBrush" Value="{StaticResource SidebarItemSelectedBorder}"/>
                            <Setter Property="Foreground" Value="{StaticResource AccentPrimary}"/>
                            <Setter Property="FontWeight" Value="SemiBold"/>
                            <Setter TargetName="border" Property="Effect">
                                <Setter.Value>
                                    <DropShadowEffect BlurRadius="8" ShadowDepth="2" Opacity="0.08" Color="#6366F1" Direction="270"/>
                                </Setter.Value>
                            </Setter>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- ==================== STATUS CAPSULE STYLE ==================== -->
    
    <Style x:Key="StatusCapsule" TargetType="Border">
        <Setter Property="CornerRadius" Value="{StaticResource RadiusMedium}"/>
        <Setter Property="Padding" Value="16,10"/>
        <Setter Property="Effect">
            <Setter.Value>
                <DropShadowEffect BlurRadius="12" ShadowDepth="3" Opacity="0.08" Color="#1F2937" Direction="270"/>
            </Setter.Value>
        </Setter>
        <Setter Property="Background">
            <Setter.Value>
                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                    <GradientStop Color="#FFFFFF" Offset="0"/>
                    <GradientStop Color="#FAFAFA" Offset="1"/>
                </LinearGradientBrush>
            </Setter.Value>
        </Setter>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="BorderBrush">
            <Setter.Value>
                <SolidColorBrush Color="#E5E7EB" Opacity="0.8"/>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- ==================== SIDEBAR STYLE ==================== -->
    
    <Style x:Key="SidebarBorder" TargetType="Border">
        <Setter Property="Background" Value="{StaticResource SidebarGradient}"/>
        <Setter Property="BorderThickness" Value="0,0,1,0"/>
        <Setter Property="BorderBrush">
            <Setter.Value>
                <SolidColorBrush Color="#E0E0E0" Opacity="0.6"/>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- ==================== BUTTON STYLES ==================== -->

    <Style x:Key="WidgetIconButton" TargetType="Button">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Padding" Value="4"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}" 
                            CornerRadius="4" 
                            Padding="{TemplateBinding Padding}">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="{StaticResource SidebarItemHover}"/>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter Property="Background" Value="{StaticResource SidebarItemSelected}"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- ==================== HEADING STYLES ==================== -->
    
    <Style x:Key="HeadingLarge" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource FontPrimary}"/>
        <Setter Property="FontSize" Value="28"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
    </Style>
    
    <Style x:Key="HeadingMedium" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource FontPrimary}"/>
        <Setter Property="FontSize" Value="20"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
    </Style>
    
    <Style x:Key="HeadingSmall" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource FontPrimary}"/>
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
    </Style>
    
    <Style x:Key="BodyText" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource FontPrimary}"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="Foreground" Value="{StaticResource TextSecondary}"/>
        <Setter Property="TextWrapping" Value="Wrap"/>
        <Setter Property="LineHeight" Value="22"/>
    </Style>
    
    <Style x:Key="CaptionText" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource FontPrimary}"/>
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="Foreground" Value="{StaticResource TextTertiary}"/>
    </Style>

    <!-- ==================== INPUT STYLES ==================== -->
    
    <Style x:Key="PremiumComboBox" TargetType="ComboBox">
        <Setter Property="Background" Value="{StaticResource SecondaryButtonGradient}"/>
        <Setter Property="BorderBrush" Value="{StaticResource BorderLight}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Padding" Value="12,10"/>
        <Setter Property="FontFamily" Value="{StaticResource FontPrimary}"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
    </Style>
    
    <Style x:Key="PremiumCheckBox" TargetType="CheckBox">
        <Setter Property="FontFamily" Value="{StaticResource FontPrimary}"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
        <Setter Property="Cursor" Value="Hand"/>
    </Style>

</ResourceDictionary>
