<UserControl x:Class="EliteWhisper.Views.Pages.SoundPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="700">
    
    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
        <StackPanel Margin="32">
            
            <!-- Page Header -->
            <TextBlock Text="Sound" Style="{StaticResource HeadingLarge}" Margin="0,0,0,8"/>
            <TextBlock Text="Configure your microphone and audio input settings." Style="{StaticResource BodyText}" Margin="0,0,0,32"/>
            
            <!-- Microphone Selection Card -->
            <Border Style="{StaticResource CardStyle}" Margin="0,0,0,16">
                <StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                        <Path Data="{StaticResource IconMicrophoneGeometry}" Fill="{StaticResource TextPrimary}" Stretch="Uniform" Width="20" Height="20" Margin="0,0,12,0"/>
                        <TextBlock Text="Microphone" Style="{StaticResource HeadingSmall}"/>
                    </StackPanel>
                    <TextBlock Text="Select which microphone to use for dictation." Style="{StaticResource BodyText}" Margin="0,0,0,16"/>
                    
                    <ComboBox Width="350" HorizontalAlignment="Left" Padding="12,10">
                        <ComboBoxItem Content="Default Microphone" IsSelected="True"/>
                        <ComboBoxItem Content="Microphone Array (Realtek)"/>
                        <ComboBoxItem Content="External USB Microphone"/>
                        <ComboBoxItem Content="Headset Microphone"/>
                    </ComboBox>
                    
                    <Button Style="{StaticResource SecondaryButton}" Margin="0,12,0,0" HorizontalAlignment="Left">
                        <TextBlock Text="Refresh Devices"/>
                    </Button>
                </StackPanel>
            </Border>
            
            <!-- Input Level Card -->
            <Border Style="{StaticResource CardStyle}" Margin="0,0,0,16">
                <StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                        <Path Data="{StaticResource IconWaveSineGeometry}" Fill="{StaticResource TextPrimary}" Stretch="Uniform" Width="20" Height="20" Margin="0,0,12,0"/>
                        <TextBlock Text="Input Level" Style="{StaticResource HeadingSmall}"/>
                    </StackPanel>
                    <TextBlock Text="Speak into your microphone to test the input level." Style="{StaticResource BodyText}" Margin="0,0,0,16"/>
                    
                    <!-- Level Meter -->
                    <Border Background="{StaticResource BackgroundTertiary}" CornerRadius="{StaticResource RadiusSmall}" Height="24" Margin="0,0,0,16">
                        <Border Background="{StaticResource AccentSuccess}" CornerRadius="{StaticResource RadiusSmall}" Width="180" HorizontalAlignment="Left"/>
                    </Border>
                    
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Current level:" Style="{StaticResource BodyText}" Margin="0,0,8,0"/>
                        <Path Data="{StaticResource IconCheckCircleGeometry}" Fill="{StaticResource AccentSuccess}" Stretch="Uniform" Width="14" Height="14" Margin="0,0,4,0" VerticalAlignment="Center"/>
                        <TextBlock Text="Good" Foreground="{StaticResource AccentSuccess}" FontWeight="SemiBold"/>
                    </StackPanel>
                </StackPanel>
            </Border>
            
            <!-- Test Microphone Card -->
            <Border Style="{StaticResource CardStyle}" Margin="0,0,0,16">
                <StackPanel>
                    <TextBlock Text="Test Recording" Style="{StaticResource HeadingSmall}" Margin="0,0,0,8"/>
                    <TextBlock Text="Record a short test to verify your microphone is working correctly." Style="{StaticResource BodyText}" Margin="0,0,0,16"/>
                    
                    <StackPanel Orientation="Horizontal">
                        <Button Style="{StaticResource PrimaryButton}" Margin="0,0,12,0">
                            <StackPanel Orientation="Horizontal">
                                <Path Data="{StaticResource IconMicrophoneGeometry}" Fill="White" Stretch="Uniform" Width="16" Height="16" Margin="0,0,8,0"/>
                                <TextBlock Text="Start Test" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                        <Button Style="{StaticResource SecondaryButton}" IsEnabled="False">
                            <StackPanel Orientation="Horizontal">
                                <Path Data="{StaticResource IconPlayGeometry}" Fill="{StaticResource TextSecondary}" Stretch="Uniform" Width="16" Height="16" Margin="0,0,8,0"/>
                                <TextBlock Text="Play Recording" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                    
                    <TextBlock Text="Click 'Start Test' and speak for a few seconds." Style="{StaticResource CaptionText}" Margin="0,16,0,0"/>
                </StackPanel>
            </Border>
            
            <!-- Audio Feedback Card -->
            <Border Style="{StaticResource CardStyle}" Margin="0,0,0,16">
                <StackPanel>
                    <TextBlock Text="Audio Feedback" Style="{StaticResource HeadingSmall}" Margin="0,0,0,8"/>
                    <TextBlock Text="Play sounds when dictation starts and stops." Style="{StaticResource BodyText}" Margin="0,0,0,16"/>
                    
                    <CheckBox IsChecked="True">
                        <StackPanel>
                            <TextBlock Text="Enable audio feedback" Foreground="{StaticResource TextPrimary}" FontSize="14"/>
                            <TextBlock Text="Plays a subtle sound when recording starts and stops" Style="{StaticResource CaptionText}"/>
                        </StackPanel>
                    </CheckBox>
                </StackPanel>
            </Border>
            
        </StackPanel>
    </ScrollViewer>
</UserControl>
