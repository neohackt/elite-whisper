<UserControl x:Class="EliteWhisper.Views.Pages.HomePage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:models="clr-namespace:EliteWhisper.Models"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="700">
    
    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
        <StackPanel Margin="32">
            
            <!-- Page Header -->
            <TextBlock Text="Welcome back" Style="{StaticResource HeadingLarge}" Margin="0,0,0,8"/>
            <TextBlock Text="Your AI-powered dictation assistant is ready." Style="{StaticResource BodyText}" Margin="0,0,0,32"/>
            
            <!-- Status Card -->
            <Border Style="{StaticResource CardStyle}" Margin="0,0,0,24" BorderBrush="{Binding CardBorderColor}" BorderThickness="1">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <StackPanel Grid.Column="0">
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                            <Path Data="{StaticResource IconCheckCircleGeometry}" Fill="{Binding CardBorderColor}" Stretch="Uniform" Width="16" Height="16" Margin="0,0,10,0" VerticalAlignment="Center"/>
                            <TextBlock Text="{Binding AppStatus}" Style="{StaticResource HeadingSmall}"/>
                        </StackPanel>
                        
                        <Grid Margin="0,8,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            
                            <TextBlock Grid.Row="0" Grid.Column="0" Text="Microphone:" Style="{StaticResource CaptionText}" Margin="0,0,12,8"/>
                            <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding CurrentMicName}" Foreground="{StaticResource TextPrimary}" FontSize="14"/>
                            
                            <TextBlock Grid.Row="1" Grid.Column="0" Text="Mode:" Style="{StaticResource CaptionText}" Margin="0,0,12,8" VerticalAlignment="Center"/>
                            <ComboBox Grid.Row="1" Grid.Column="1" 
                                      ItemsSource="{Binding Modes}" 
                                      SelectedItem="{Binding SelectedMode}"
                                      DisplayMemberPath="Name"
                                      Margin="0,0,0,8"
                                      Width="180" HorizontalAlignment="Left"/>

                            <TextBlock Grid.Row="2" Grid.Column="0" Text="Provider:" Style="{StaticResource CaptionText}" Margin="0,0,12,0"/>
                            <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding CurrentProviderName}" Foreground="{StaticResource TextPrimary}" FontSize="14"/>
                        </Grid>
                    </StackPanel>
                    
                    <Button Grid.Column="1" Command="{Binding ToggleDictationCommand}" Style="{StaticResource PrimaryButton}" VerticalAlignment="Center" MinWidth="140">
                        <StackPanel Orientation="Horizontal">
                            <!-- Icon could be dynamic too but sticking to Mic for now as it's the primary action -->
                            <Path Data="{StaticResource IconMicrophoneGeometry}" Fill="White" Stretch="Uniform" Width="16" Height="16" Margin="0,0,8,0"/>
                            <TextBlock Text="{Binding DictationButtonText}" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                </Grid>
            </Border>
            
            <!-- Quick Actions Header -->
            <TextBlock Text="Get started" Style="{StaticResource HeadingMedium}" Margin="0,0,0,16"/>
            
            <!-- Quick Action Cards -->
            <UniformGrid Columns="2" Margin="0,0,0,24">
                
                <!-- Configure AI Models -->
                <Border Style="{StaticResource CardStyle}" Margin="0,0,12,12">
                    <StackPanel>
                        <Border Background="{StaticResource SidebarItemSelected}" CornerRadius="8" Width="48" Height="48" HorizontalAlignment="Left" Margin="0,0,0,12">
                            <Path Data="{StaticResource IconBrainGeometry}" Fill="{StaticResource AccentPrimary}" Stretch="Uniform" Width="24" Height="24" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <TextBlock Text="Configure AI Models" Style="{StaticResource HeadingSmall}" Margin="0,0,0,8"/>
                        <TextBlock Text="Choose between speed and accuracy based on your needs." Style="{StaticResource BodyText}" Margin="0,0,0,16"/>
                        <Button Content="View Models" Command="{Binding NavigateToCommand}" CommandParameter="{x:Static models:AppPage.Models}" Style="{StaticResource SecondaryButton}" HorizontalAlignment="Left"/>
                    </StackPanel>
                </Border>
                
                <!-- Change Shortcut -->
                <Border Style="{StaticResource CardStyle}" Margin="12,0,0,12">
                    <StackPanel>
                        <Border Background="{StaticResource SidebarItemSelected}" CornerRadius="8" Width="48" Height="48" HorizontalAlignment="Left" Margin="0,0,0,12">
                            <Path Data="{StaticResource IconKeyboardGeometry}" Fill="{StaticResource AccentPrimary}" Stretch="Uniform" Width="24" Height="24" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <TextBlock Text="Keyboard Shortcut" Style="{StaticResource HeadingSmall}" Margin="0,0,0,8"/>
                        <TextBlock Text="Current shortcut: F2. Customize it to your preference." Style="{StaticResource BodyText}" Margin="0,0,0,16"/>
                        <Button Content="Change Shortcut" Style="{StaticResource SecondaryButton}" HorizontalAlignment="Left"/>
                    </StackPanel>
                </Border>
                
                <!-- Test Microphone -->
                <Border Style="{StaticResource CardStyle}" Margin="0,12,12,0">
                    <StackPanel>
                        <Border Background="{StaticResource SidebarItemSelected}" CornerRadius="8" Width="48" Height="48" HorizontalAlignment="Left" Margin="0,0,0,12">
                            <Path Data="{StaticResource IconWaveSineGeometry}" Fill="{StaticResource AccentPrimary}" Stretch="Uniform" Width="24" Height="24" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <TextBlock Text="Test Microphone" Style="{StaticResource HeadingSmall}" Margin="0,0,0,8"/>
                        <TextBlock Text="Make sure your microphone is working correctly." Style="{StaticResource BodyText}" Margin="0,0,0,16"/>
                        <Button Content="Test Now" Style="{StaticResource SecondaryButton}" HorizontalAlignment="Left"/>
                    </StackPanel>
                </Border>
                
                <!-- View History -->
                <Border Style="{StaticResource CardStyle}" Margin="12,12,0,0">
                    <StackPanel>
                        <Border Background="{StaticResource SidebarItemSelected}" CornerRadius="8" Width="48" Height="48" HorizontalAlignment="Left" Margin="0,0,0,12">
                            <Path Data="{StaticResource IconHistoryGeometry}" Fill="{StaticResource AccentPrimary}" Stretch="Uniform" Width="24" Height="24" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <TextBlock Text="Dictation History" Style="{StaticResource HeadingSmall}" Margin="0,0,0,8"/>
                        <TextBlock Text="Review and search through your past dictations." Style="{StaticResource BodyText}" Margin="0,0,0,16"/>
                        <Button Content="View History" Style="{StaticResource SecondaryButton}" HorizontalAlignment="Left"/>
                    </StackPanel>
                </Border>
                
            </UniformGrid>
            
            <!-- Tips Section -->
            <Border Background="{StaticResource BackgroundTertiary}" CornerRadius="{StaticResource RadiusMedium}" Padding="20" Margin="0,8,0,0">
                <StackPanel Orientation="Horizontal">
                    <Path Data="{StaticResource IconInfoGeometry}" Fill="{StaticResource AccentPrimary}" Stretch="Uniform" Width="20" Height="20" Margin="0,0,12,0" VerticalAlignment="Top"/>
                    <StackPanel>
                        <TextBlock Text="Pro Tip" FontWeight="SemiBold" Foreground="{StaticResource TextPrimary}" Margin="0,0,0,4"/>
                        <TextBlock Text="Press F2 anywhere to start dictating. Press F2 again to stop and transcribe. Your text will be typed at the cursor position." 
                                   Style="{StaticResource BodyText}" TextWrapping="Wrap"/>
                    </StackPanel>
                </StackPanel>
            </Border>
            
        </StackPanel>
    </ScrollViewer>
</UserControl>
