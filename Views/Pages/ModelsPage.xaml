<UserControl x:Class="EliteWhisper.Views.Pages.ModelsPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="700">
    
    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
        <StackPanel Margin="32">
            
            <!-- Storage Location Header -->
            <Border Background="{StaticResource SidebarBackground}" CornerRadius="8" Padding="16,12" Margin="0,0,0,24">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <Path Data="{StaticResource IconFolderGeometry}" Fill="{StaticResource TextSecondary}" Stretch="Uniform" Width="20" Height="20" Margin="0,0,12,0"/>
                    
                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                        <TextBlock Text="Model Storage Location" Style="{StaticResource CaptionText}" Margin="0,0,0,2"/>
                        <TextBlock Text="{Binding CurrentStoragePath}" Style="{StaticResource BodyText}" TextTrimming="CharacterEllipsis"/>
                    </StackPanel>
                    
                    <Button Grid.Column="2" Style="{StaticResource SecondaryButton}" Command="{Binding ChangeStorageLocationCommand}" Margin="12,0,0,0">
                        <TextBlock Text="Change"/>
                    </Button>
                </Grid>
            </Border>
            
            <!-- Page Header -->
            <TextBlock Text="AI Models" Style="{StaticResource HeadingLarge}" Margin="0,0,0,8"/>
            <TextBlock Text="Choose a transcription model based on your needs. Larger models are more accurate but slower." 
                       Style="{StaticResource BodyText}" Margin="0,0,0,32"/>
            
            <ItemsControl x:Name="ModelsList" ItemsSource="{Binding Models}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Margin="0,0,0,16" BorderThickness="2" CornerRadius="12">
                            <Border.Style>
                                <Style TargetType="Border" BasedOn="{StaticResource CardStyle}">
                                    <Setter Property="BorderBrush" Value="Transparent"/>
                                    <Style.Triggers>
                                        <DataTrigger Value="True">
                                            <DataTrigger.Binding>
                                                <MultiBinding Converter="{StaticResource StringEqualsMultiConverter}">
                                                    <Binding Path="DataContext.ActiveModelId" RelativeSource="{RelativeSource AncestorType=ItemsControl}"/>
                                                    <Binding Path="Id"/>
                                                </MultiBinding>
                                            </DataTrigger.Binding>
                                            <Setter Property="BorderBrush" Value="{StaticResource AccentPrimary}"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Border.Style>
                            
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                
                                <StackPanel Grid.Column="0">
                                    <Grid Margin="0,0,0,12">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        
                                        <!-- Icon -->
                                        <Border Grid.Column="0" Background="{Binding BackgroundColor}" CornerRadius="10" Width="48" Height="48" Margin="0,0,16,0">
                                            <Path Data="{Binding IconPath, Converter={StaticResource IconNameToGeometryConverter}}" 
                                                  Fill="{Binding AccentColor}" 
                                                  Stretch="Uniform" Width="24" Height="24" 
                                                  HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                        
                                        <!-- Title -->
                                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                            <StackPanel Orientation="Horizontal" Margin="0,0,0,4">
                                                <TextBlock Text="{Binding Name}" Style="{StaticResource HeadingMedium}"/>
                                                <Border Background="{StaticResource AccentPrimary}" CornerRadius="4" Padding="8,2" Margin="12,0,0,0" VerticalAlignment="Center">
                                                    <Border.Visibility>
                                                        <MultiBinding Converter="{StaticResource StringEqualsToVisibilityMultiConverter}">
                                                            <Binding Path="DataContext.ActiveModelId" RelativeSource="{RelativeSource AncestorType=ItemsControl}"/>
                                                            <Binding Path="Id"/>
                                                        </MultiBinding>
                                                    </Border.Visibility>
                                                    <TextBlock Text="ACTIVE" Foreground="White" FontSize="10" FontWeight="Bold"/>
                                                </Border>
                                            </StackPanel>
                                            <TextBlock Text="{Binding Tier}" Style="{StaticResource CaptionText}"/>
                                        </StackPanel>
                                        
                                        <!-- More Menu (only for installed models) -->
                                        <Button Grid.Column="2" VerticalAlignment="Top" Margin="0,4,0,0">
                                            <Button.Style>
                                                <Style TargetType="Button" BasedOn="{StaticResource WidgetIconButton}">
                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding IsInstalled}" Value="True">
                                                            <Setter Property="Visibility" Value="Visible"/>
                                                        </DataTrigger>
                                                        <DataTrigger Value="True">
                                                            <DataTrigger.Binding>
                                                                <MultiBinding Converter="{StaticResource StringEqualsMultiConverter}">
                                                                    <Binding Path="DataContext.ActiveModelId" RelativeSource="{RelativeSource AncestorType=ItemsControl}"/>
                                                                    <Binding Path="Id"/>
                                                                </MultiBinding>
                                                            </DataTrigger.Binding>
                                                            <Setter Property="Visibility" Value="Hidden"/> <!-- Don't let user delete active via menu easily -->
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Button.Style>
                                            <Path Data="{StaticResource IconDotsThreeGeometry}" Fill="{StaticResource TextSecondary}" Width="20" Height="20"/>
                                            <Button.ContextMenu>
                                                <ContextMenu>
                                                    <MenuItem Header="Activate" 
                                                              Command="{Binding DataContext.ActivateModelCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                                              CommandParameter="{Binding}"
                                                              Visibility="{Binding IsActive, Converter={StaticResource BoolToVis}, ConverterParameter=Inverse}"/>
                                                    <MenuItem Header="Reveal in Explorer"
                                                              Command="{Binding DataContext.RevealInFolderCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                                              CommandParameter="{Binding}"/>
                                                    <Separator/>
                                                    <MenuItem Header="Delete Model" Foreground="{StaticResource AccentDanger}"
                                                              Command="{Binding DataContext.DeleteModelCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                                              CommandParameter="{Binding}"/>
                                                </ContextMenu>
                                            </Button.ContextMenu>
                                        </Button>
                                    </Grid>
                                    
                                    <TextBlock Text="{Binding Description}" 
                                               Style="{StaticResource BodyText}" Margin="0,0,0,20"/>
                                    
                                    <!-- Stats Grid -->
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        
                                        <!-- Speed -->
                                        <StackPanel Grid.Column="0">
                                            <TextBlock Text="Speed" Style="{StaticResource CaptionText}" Margin="0,0,0,6"/>
                                            <StackPanel Orientation="Horizontal" Margin="0,0,0,4">
                                                <Ellipse Width="8" Height="8" Margin="0,0,4,0" Fill="{StaticResource BorderMedium}">
                                                    <Ellipse.Style>
                                                        <Style TargetType="Ellipse">
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding SpeedRating}" Value="1"><Setter Property="Fill" Value="{StaticResource AccentSuccess}"/></DataTrigger>
                                                                <DataTrigger Binding="{Binding SpeedRating}" Value="2"><Setter Property="Fill" Value="{StaticResource AccentSuccess}"/></DataTrigger>
                                                                <DataTrigger Binding="{Binding SpeedRating}" Value="3"><Setter Property="Fill" Value="{StaticResource AccentSuccess}"/></DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </Ellipse.Style>
                                                </Ellipse>
                                                <Ellipse Width="8" Height="8" Margin="0,0,4,0" Fill="{StaticResource BorderMedium}">
                                                    <Ellipse.Style>
                                                        <Style TargetType="Ellipse">
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding SpeedRating}" Value="2"><Setter Property="Fill" Value="{StaticResource AccentSuccess}"/></DataTrigger>
                                                                <DataTrigger Binding="{Binding SpeedRating}" Value="3"><Setter Property="Fill" Value="{StaticResource AccentSuccess}"/></DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </Ellipse.Style>
                                                </Ellipse>
                                                <Ellipse Width="8" Height="8" Margin="0,0,4,0" Fill="{StaticResource BorderMedium}">
                                                    <Ellipse.Style>
                                                        <Style TargetType="Ellipse">
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding SpeedRating}" Value="3"><Setter Property="Fill" Value="{StaticResource AccentSuccess}"/></DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </Ellipse.Style>
                                                </Ellipse>
                                            </StackPanel>
                                            <TextBlock Text="{Binding SpeedLabel}" FontSize="12" FontWeight="SemiBold" Foreground="{StaticResource TextPrimary}"/>
                                        </StackPanel>
                                        
                                        <!-- Accuracy -->
                                        <StackPanel Grid.Column="1">
                                            <TextBlock Text="Accuracy" Style="{StaticResource CaptionText}" Margin="0,0,0,6"/>
                                            <StackPanel Orientation="Horizontal" Margin="0,0,0,4">
                                                <Ellipse Width="8" Height="8" Margin="0,0,4,0" Fill="{StaticResource BorderMedium}">
                                                    <Ellipse.Style>
                                                        <Style TargetType="Ellipse">
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding AccuracyRating}" Value="1"><Setter Property="Fill" Value="{StaticResource AccentPrimary}"/></DataTrigger>
                                                                <DataTrigger Binding="{Binding AccuracyRating}" Value="2"><Setter Property="Fill" Value="{StaticResource AccentPrimary}"/></DataTrigger>
                                                                <DataTrigger Binding="{Binding AccuracyRating}" Value="3"><Setter Property="Fill" Value="{StaticResource AccentPrimary}"/></DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </Ellipse.Style>
                                                </Ellipse>
                                                <Ellipse Width="8" Height="8" Margin="0,0,4,0" Fill="{StaticResource BorderMedium}">
                                                    <Ellipse.Style>
                                                        <Style TargetType="Ellipse">
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding AccuracyRating}" Value="2"><Setter Property="Fill" Value="{StaticResource AccentPrimary}"/></DataTrigger>
                                                                <DataTrigger Binding="{Binding AccuracyRating}" Value="3"><Setter Property="Fill" Value="{StaticResource AccentPrimary}"/></DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </Ellipse.Style>
                                                </Ellipse>
                                                <Ellipse Width="8" Height="8" Margin="0,0,4,0" Fill="{StaticResource BorderMedium}">
                                                    <Ellipse.Style>
                                                        <Style TargetType="Ellipse">
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding AccuracyRating}" Value="3"><Setter Property="Fill" Value="{StaticResource AccentPrimary}"/></DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </Ellipse.Style>
                                                </Ellipse>
                                            </StackPanel>
                                            <TextBlock Text="{Binding AccuracyLabel}" FontSize="12" FontWeight="SemiBold" Foreground="{StaticResource TextPrimary}"/>
                                        </StackPanel>
                                        
                                        <!-- Size -->
                                        <StackPanel Grid.Column="2">
                                            <TextBlock Text="Size" Style="{StaticResource CaptionText}" Margin="0,0,0,6"/>
                                            <TextBlock Text="{Binding SizeMB, StringFormat=~{0} MB}" FontSize="14" FontWeight="SemiBold" Foreground="{StaticResource TextPrimary}" Margin="0,4,0,0"/>
                                        </StackPanel>
                                    </Grid>
                                    
                                    <!-- Download Progress -->
                                    <ProgressBar Value="{Binding DownloadProgress}" Maximum="100" Height="4" Margin="0,16,0,0"
                                                 Visibility="{Binding IsDownloading, Converter={StaticResource BoolToVis}}"/>
                                </StackPanel>
                                
                                <StackPanel Grid.Column="1" VerticalAlignment="Center" Margin="24,0,0,0">
                                    <Button Margin="0,0,0,8"
                                            Command="{Binding DataContext.DownloadModelCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                            CommandParameter="{Binding}"
                                            Height="36" MinWidth="110" Padding="12,0">
                                        <Button.Style>
                                            <Style TargetType="Button" BasedOn="{StaticResource SecondaryButton}">
                                                <Setter Property="Visibility" Value="Visible"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding IsInstalled}" Value="True">
                                                        <Setter Property="Visibility" Value="Collapsed"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding IsDownloading}" Value="True">
                                                        <Setter Property="IsEnabled" Value="False"/>
                                                        <Setter Property="Content" Value="Downloading..."/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Button.Style>
                                        <StackPanel Orientation="Horizontal">
                                            <Path Data="{StaticResource IconDownloadGeometry}" Fill="{StaticResource TextPrimary}" Stretch="Uniform" Width="14" Height="14" Margin="0,0,8,0"/>
                                            <TextBlock Text="Download" VerticalAlignment="Center"/>
                                        </StackPanel>
                                    </Button>
                                    
                                    <Button Margin="0,0,0,8"
                                            Command="{Binding DataContext.ActivateModelCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                            CommandParameter="{Binding}"
                                            Height="36" MinWidth="110" Padding="12,0">
                                        <Button.Style>
                                            <Style TargetType="Button" BasedOn="{StaticResource PrimaryButton}">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding IsInstalled}" Value="True">
                                                        <Setter Property="Visibility" Value="Visible"/>
                                                    </DataTrigger>
                                                    <DataTrigger Value="True">
                                                        <DataTrigger.Binding>
                                                            <MultiBinding Converter="{StaticResource StringEqualsMultiConverter}">
                                                                <Binding Path="DataContext.ActiveModelId" RelativeSource="{RelativeSource AncestorType=ItemsControl}"/>
                                                                <Binding Path="Id"/>
                                                            </MultiBinding>
                                                        </DataTrigger.Binding>
                                                        <Setter Property="IsEnabled" Value="False"/>
                                                    </DataTrigger>
                                                    <!-- Disable when engine is busy -->
                                                    <DataTrigger Binding="{Binding DataContext.IsBusy, RelativeSource={RelativeSource AncestorType=ItemsControl}}" Value="True">
                                                        <Setter Property="IsEnabled" Value="False"/>
                                                    </DataTrigger>
                                                    <!-- But keep loading button technically enabled so it looks active (or disabled but styled?) -->
                                                    <!-- Actually, if we disable it, the content might gray out. Let's rely on content changes for feedback, keeping disabled state for clicks. -->
                                                </Style.Triggers>
                                            </Style>
                                        </Button.Style>
                                        
                                        <Grid>
                                            <!-- Normal Content -->
                                            <StackPanel Orientation="Horizontal">
                                                <StackPanel.Style>
                                                    <Style TargetType="StackPanel">
                                                        <Setter Property="Visibility" Value="Visible"/>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding IsLoading}" Value="True">
                                                                <Setter Property="Visibility" Value="Collapsed"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </StackPanel.Style>
                                                <Path Data="{StaticResource IconCheckCircleGeometry}" Fill="White" Stretch="Uniform" Width="14" Height="14" Margin="0,0,8,0">
                                                    <Path.Style>
                                                        <Style TargetType="Path">
                                                            <Setter Property="Visibility" Value="Collapsed"/>
                                                            <Style.Triggers>
                                                                <DataTrigger Value="True">
                                                                    <DataTrigger.Binding>
                                                                        <MultiBinding Converter="{StaticResource StringEqualsMultiConverter}">
                                                                            <Binding Path="DataContext.ActiveModelId" RelativeSource="{RelativeSource AncestorType=ItemsControl}"/>
                                                                            <Binding Path="Id"/>
                                                                        </MultiBinding>
                                                                    </DataTrigger.Binding>
                                                                    <Setter Property="Visibility" Value="Visible"/>
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </Path.Style>
                                                </Path>
                                                <TextBlock VerticalAlignment="Center">
                                                    <TextBlock.Style>
                                                        <Style TargetType="TextBlock">
                                                            <Setter Property="Text" Value="Activate"/>
                                                            <Style.Triggers>
                                                                <DataTrigger Value="True">
                                                                    <DataTrigger.Binding>
                                                                        <MultiBinding Converter="{StaticResource StringEqualsMultiConverter}">
                                                                            <Binding Path="DataContext.ActiveModelId" RelativeSource="{RelativeSource AncestorType=ItemsControl}"/>
                                                                            <Binding Path="Id"/>
                                                                        </MultiBinding>
                                                                    </DataTrigger.Binding>
                                                                    <Setter Property="Text" Value="Using This"/>
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </TextBlock.Style>
                                                </TextBlock>
                                            </StackPanel>

                                            <!-- Loading Content -->
                                            <StackPanel Orientation="Horizontal">
                                                <StackPanel.Style>
                                                    <Style TargetType="StackPanel">
                                                        <Setter Property="Visibility" Value="Collapsed"/>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding IsLoading}" Value="True">
                                                                <Setter Property="Visibility" Value="Visible"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </StackPanel.Style>
                                                <Path Data="{StaticResource IconSpinnerGeometry}" Fill="White" Stretch="Uniform" Width="14" Height="14" Margin="0,0,8,0" RenderTransformOrigin="0.5,0.5">
                                                    <Path.RenderTransform>
                                                        <RotateTransform x:Name="Spin"/>
                                                    </Path.RenderTransform>
                                                    <Path.Triggers>
                                                        <EventTrigger RoutedEvent="Loaded">
                                                            <BeginStoryboard>
                                                                <Storyboard>
                                                                    <DoubleAnimation Storyboard.TargetProperty="(Path.RenderTransform).(RotateTransform.Angle)" From="0" To="360" Duration="0:0:1" RepeatBehavior="Forever"/>
                                                                </Storyboard>
                                                            </BeginStoryboard>
                                                        </EventTrigger>
                                                    </Path.Triggers>
                                                </Path>
                                                <TextBlock Text="Loading..." VerticalAlignment="Center"/>
                                            </StackPanel>
                                        </Grid>
                                    </Button>

                                    <TextBlock Text="Not installed" HorizontalAlignment="Center">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock" BasedOn="{StaticResource CaptionText}">
                                                <Setter Property="Visibility" Value="Visible"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding IsInstalled}" Value="True">
                                                        <Setter Property="Visibility" Value="Collapsed"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding IsDownloading}" Value="True">
                                                         <Setter Property="Visibility" Value="Collapsed"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                    
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Visibility="{Binding IsInstalled, Converter={StaticResource BoolToVis}}" Margin="0,4,0,0">
                                        <Path Data="{StaticResource IconCheckCircleGeometry}" Fill="{StaticResource AccentSuccess}" Stretch="Uniform" Width="12" Height="12" Margin="0,0,4,0"/>
                                        <TextBlock Text="Installed" Foreground="{StaticResource AccentSuccess}" FontSize="12"/>
                                    </StackPanel>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
            
        </StackPanel>
    </ScrollViewer>
</UserControl>
