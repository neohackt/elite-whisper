<Window x:Class="EliteWhisper.Views.WizardWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Welcome to Elite Whisper" 
        SizeToContent="Height"
        MinHeight="550"
        Width="700"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        ResizeMode="NoResize"
        AllowsTransparency="True"
        Background="Transparent">



    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>
    </Window.Resources>

    <Border Background="{DynamicResource BackgroundPrimary}" CornerRadius="12" BorderBrush="{DynamicResource BorderPrimary}" BorderThickness="1">
        <Grid Margin="32">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,32">
                <Border Background="{DynamicResource AccentPrimary}" CornerRadius="8" Width="32" Height="32" Margin="0,0,12,0">
                    <TextBlock Text="ðŸŽ™ï¸" FontSize="16" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                </Border>
                <TextBlock Text="Elite Whisper" FontSize="20" FontWeight="SemiBold" VerticalAlignment="Center" Foreground="{DynamicResource TextPrimary}"/>
            </StackPanel>

            <!-- Content Area -->
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled" Padding="0,0,0,24">
                <Grid>
                    
                    <!-- STEP 1: WELCOME -->
                    <StackPanel Visibility="{Binding IsStep1, Converter={StaticResource BoolToVis}}" VerticalAlignment="Center" HorizontalAlignment="Center">
                        <TextBlock Text="Welcome" FontSize="28" FontWeight="Bold" Foreground="{DynamicResource TextPrimary}" HorizontalAlignment="Center" Margin="0,0,0,16"/>
                        <TextBlock Text="AI-powered dictation running entirely on your device." FontSize="16" Foreground="{DynamicResource TextSecondary}" HorizontalAlignment="Center" Margin="0,0,0,8"/>
                        <TextBlock Text="Fast. Private. No cloud required." FontSize="16" Foreground="{DynamicResource TextSecondary}" HorizontalAlignment="Center"/>
                    </StackPanel>

                    <!-- STEP 2: STORAGE -->
                    <StackPanel Visibility="{Binding IsStep2, Converter={StaticResource BoolToVis}}" VerticalAlignment="Center" HorizontalAlignment="Center" MaxWidth="500">
                        <Path Data="{DynamicResource IconFolderGeometry}" Fill="{DynamicResource AccentPrimary}" Stretch="Uniform" Width="48" Height="48" HorizontalAlignment="Center" Margin="0,0,0,24"/>
                        
                        <TextBlock Text="Model Storage" FontSize="24" FontWeight="SemiBold" Foreground="{DynamicResource TextPrimary}" HorizontalAlignment="Center" Margin="0,0,0,16"/>
                        <TextBlock Text="We need a place to store the AI models (approx 1-3GB)." FontSize="14" Foreground="{DynamicResource TextSecondary}" HorizontalAlignment="Center" Margin="0,0,0,24" TextWrapping="Wrap" TextAlignment="Center"/>

                        <Border Background="{DynamicResource SurfacePrimary}" CornerRadius="6" Padding="16" Margin="0,0,0,24">
                            <StackPanel>
                                <TextBlock Text="Current Location:" FontSize="12" Foreground="{DynamicResource TextTertiary}" Margin="0,0,0,4"/>
                                <TextBlock Text="{Binding ModelsDirectory}" FontSize="14" FontFamily="Consolas" Foreground="{DynamicResource TextPrimary}" TextTrimming="CharacterEllipsis"/>
                            </StackPanel>
                        </Border>
                        
                        <Button Content="Change Location..." Command="{Binding ChangeDirectoryCommand}" Style="{DynamicResource SecondaryButton}" Foreground="#1F2937" HorizontalAlignment="Center"/>
                    </StackPanel>

                    <!-- STEP 3: HOTKEYS -->
                    <StackPanel Visibility="{Binding IsStep3, Converter={StaticResource BoolToVis}}" VerticalAlignment="Center" HorizontalAlignment="Center">
                        <Path Data="{DynamicResource IconKeyboardGeometry}" Fill="{DynamicResource AccentPrimary}" Stretch="Uniform" Width="48" Height="48" HorizontalAlignment="Center" Margin="0,0,0,24"/>
                        
                        <TextBlock Text="How to Use" FontSize="24" FontWeight="SemiBold" Foreground="{DynamicResource TextPrimary}" HorizontalAlignment="Center" Margin="0,0,0,32"/>
                        
                        <Border Background="{DynamicResource SurfacePrimary}" CornerRadius="8" Padding="24" HorizontalAlignment="Center">
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                <Border Background="{DynamicResource BackgroundPrimary}" CornerRadius="6" Padding="12,6" BorderBrush="{DynamicResource BorderPrimary}" BorderThickness="1" Margin="0,0,16,0">
                                    <TextBlock Text="F2" FontSize="18" FontWeight="Bold" Foreground="{DynamicResource TextPrimary}"/>
                                </Border>
                                <TextBlock Text="Press anywhere to start dictation" VerticalAlignment="Center" FontSize="16" Foreground="{DynamicResource TextPrimary}"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>

                    <!-- STEP 4: FINISH -->
                    <StackPanel Visibility="{Binding IsStep4, Converter={StaticResource BoolToVis}}" VerticalAlignment="Center" HorizontalAlignment="Center">
                        <Path Data="{DynamicResource IconCheckCircleGeometry}" Fill="#10B981" Stretch="Uniform" Width="64" Height="64" HorizontalAlignment="Center" Margin="0,0,0,24"/>
                        
                        <TextBlock Text="All Set!" FontSize="28" FontWeight="Bold" Foreground="{DynamicResource TextPrimary}" HorizontalAlignment="Center" Margin="0,0,0,16"/>
                        <TextBlock Text="Elite Whisper is ready to listen." FontSize="16" Foreground="{DynamicResource TextSecondary}" HorizontalAlignment="Center"/>
                    </StackPanel>

                </Grid>
            </ScrollViewer>

            <!-- Navigation -->
            <Grid Grid.Row="2" Margin="0,32,0,0">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <Button Content="{Binding FinishButtonText}" Command="{Binding NextCommand}" Style="{DynamicResource PrimaryButton}" Width="120" Height="40"/>
                </StackPanel>
            </Grid>
        </Grid>
    </Border>
</Window>
