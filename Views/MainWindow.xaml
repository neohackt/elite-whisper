<Window x:Class="EliteWhisper.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EliteWhisper.Views"
        xmlns:pages="clr-namespace:EliteWhisper.Views.Pages"
        xmlns:models="clr-namespace:EliteWhisper.Models"
        mc:Ignorable="d"
        Title="Elite Whisper" 
        Height="650" Width="950"
        MinHeight="500" MinWidth="750"
        WindowStartupLocation="CenterScreen"
        Icon="/Assets/app.ico"
        Background="{StaticResource BackgroundPrimary}">
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="220"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        
        <!-- ==================== LEFT SIDEBAR ==================== -->
        <Border Grid.Column="0" Style="{StaticResource SidebarBorder}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <!-- App Logo & Title -->
                <StackPanel Grid.Row="0" Margin="20,24,20,32">
                    <StackPanel Orientation="Horizontal">
                        <Image Source="/Assets/logo.png" Width="36" Height="36" Margin="0,0,12,0" 
                               RenderOptions.BitmapScalingMode="HighQuality" SnapsToDevicePixels="True"/>
                        <StackPanel VerticalAlignment="Center">
                            <TextBlock Text="Elite Whisper" FontSize="16" FontWeight="SemiBold" Foreground="{StaticResource TextPrimary}"/>
                            <TextBlock Text="AI Dictation" FontSize="11" Foreground="{StaticResource TextTertiary}"/>
                        </StackPanel>
                    </StackPanel>
                </StackPanel>
                
                <!-- Navigation Items -->
                <StackPanel Grid.Row="1">
                    
                    <RadioButton x:Name="NavHome" Style="{StaticResource NavButton}" 
                                 IsChecked="{Binding IsHomePage, Mode=TwoWay}" GroupName="Nav">
                        <StackPanel Orientation="Horizontal">
                            <Path Data="{StaticResource IconHomeGeometry}" Fill="{StaticResource TextSecondary}" Stretch="Uniform" Width="20" Height="20" Margin="0,0,12,0"/>
                            <TextBlock Text="Home" VerticalAlignment="Center"/>
                        </StackPanel>
                    </RadioButton>
                    
                    <RadioButton x:Name="NavModels" Style="{StaticResource NavButton}" 
                                 IsChecked="{Binding IsModelsPage, Mode=TwoWay}" GroupName="Nav">
                        <StackPanel Orientation="Horizontal">
                            <Path Data="{StaticResource IconBrainGeometry}" Fill="{StaticResource TextSecondary}" Stretch="Uniform" Width="20" Height="20" Margin="0,0,12,0"/>
                            <TextBlock Text="AI Models" VerticalAlignment="Center"/>
                        </StackPanel>
                    </RadioButton>
                    
                    <RadioButton x:Name="NavConfiguration" Style="{StaticResource NavButton}" 
                                 IsChecked="{Binding IsConfigurationPage, Mode=TwoWay}" GroupName="Nav">
                        <StackPanel Orientation="Horizontal">
                            <Path Data="{StaticResource IconGearGeometry}" Fill="{StaticResource TextSecondary}" Stretch="Uniform" Width="20" Height="20" Margin="0,0,12,0"/>
                            <TextBlock Text="Configuration" VerticalAlignment="Center"/>
                        </StackPanel>
                    </RadioButton>
                    
                    <RadioButton x:Name="NavSound" Style="{StaticResource NavButton}" 
                                 IsChecked="{Binding IsSoundPage, Mode=TwoWay}" GroupName="Nav">
                        <StackPanel Orientation="Horizontal">
                            <Path Data="{StaticResource IconMicrophoneGeometry}" Fill="{StaticResource TextSecondary}" Stretch="Uniform" Width="20" Height="20" Margin="0,0,12,0"/>
                            <TextBlock Text="Sound" VerticalAlignment="Center"/>
                        </StackPanel>
                    </RadioButton>
                    
                    <RadioButton x:Name="NavHistory" Style="{StaticResource NavButton}" 
                                 IsChecked="{Binding IsHistoryPage, Mode=TwoWay}" GroupName="Nav">
                        <StackPanel Orientation="Horizontal">
                            <Path Data="{StaticResource IconHistoryGeometry}" Fill="{StaticResource TextSecondary}" Stretch="Uniform" Width="20" Height="20" Margin="0,0,12,0"/>
                            <TextBlock Text="History" VerticalAlignment="Center"/>
                        </StackPanel>
                    </RadioButton>
                    
                    <RadioButton x:Name="NavAbout" Style="{StaticResource NavButton}" 
                                 IsChecked="{Binding IsAboutPage, Mode=TwoWay}" GroupName="Nav">
                        <StackPanel Orientation="Horizontal">
                            <Path Data="{StaticResource IconInfoGeometry}" Fill="{StaticResource TextSecondary}" Stretch="Uniform" Width="20" Height="20" Margin="0,0,12,0"/>
                            <TextBlock Text="About" VerticalAlignment="Center"/>
                        </StackPanel>
                    </RadioButton>
                    
                </StackPanel>
                
                <!-- Bottom Status -->
                <Border Grid.Row="2" Margin="12,0,12,16" Style="{StaticResource StatusCapsule}">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,4">
                            <Ellipse Width="8" Height="8" Fill="{Binding StatusColor}" Margin="0,0,8,0" VerticalAlignment="Center"/>
                            <TextBlock Text="{Binding AppStatus}" Foreground="{StaticResource TextPrimary}" FontSize="13" FontWeight="Medium"/>
                        </StackPanel>
                        <TextBlock Text="{Binding StatusMessage}" Style="{StaticResource CaptionText}"/>
                    </StackPanel>
                </Border>
                
            </Grid>
        </Border>
        
        <!-- ==================== MAIN CONTENT AREA ==================== -->
        <Border Grid.Column="1" Background="{StaticResource BackgroundPrimary}">
            <ContentControl x:Name="MainContent">
                <ContentControl.Style>
                    <Style TargetType="ContentControl">
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding CurrentPage}" Value="{x:Static models:AppPage.Home}">
                                <Setter Property="Content">
                                    <Setter.Value>
                                        <pages:HomePage/>
                                    </Setter.Value>
                                </Setter>
                            </DataTrigger>
                            <DataTrigger Binding="{Binding CurrentPage}" Value="{x:Static models:AppPage.Models}">
                                <Setter Property="Content">
                                    <Setter.Value>
                                        <pages:ModelsPage/>
                                    </Setter.Value>
                                </Setter>
                            </DataTrigger>
                            <DataTrigger Binding="{Binding CurrentPage}" Value="{x:Static models:AppPage.Configuration}">
                                <Setter Property="Content">
                                    <Setter.Value>
                                        <pages:ConfigurationPage/>
                                    </Setter.Value>
                                </Setter>
                            </DataTrigger>
                            <DataTrigger Binding="{Binding CurrentPage}" Value="{x:Static models:AppPage.Sound}">
                                <Setter Property="Content">
                                    <Setter.Value>
                                        <pages:SoundPage/>
                                    </Setter.Value>
                                </Setter>
                            </DataTrigger>
                            <DataTrigger Binding="{Binding CurrentPage}" Value="{x:Static models:AppPage.History}">
                                <Setter Property="Content">
                                    <Setter.Value>
                                        <pages:HistoryPage/>
                                    </Setter.Value>
                                </Setter>
                            </DataTrigger>
                            <DataTrigger Binding="{Binding CurrentPage}" Value="{x:Static models:AppPage.About}">
                                <Setter Property="Content">
                                    <Setter.Value>
                                        <pages:AboutPage/>
                                    </Setter.Value>
                                </Setter>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </ContentControl.Style>
            </ContentControl>
        </Border>
        
    </Grid>
</Window>
